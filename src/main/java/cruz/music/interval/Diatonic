package cruz.music.interval;

/**
 * @author CruzA
 */
public class Diatonic
{
	/**
	 * Zero Semitones
	 */
	public static final int UNISON = Semitone.ZERO;
	public static final int SECOND_DIMINISHED = Semitone.ZERO;

	/**
	 * One Semitones
	 */
	public static final int SECOND_MINOR = Semitone.ONE;
	
	/**
	 * Two Semitones
	 */
	public static final int SECOND_MAJOR = Semitone.TWO;
	
	/**
	 * Four Semitones
	 */
	public static final int SECOND_AUGMENTED = Semitone.THREE;

	/**
	 * Four Semitones
	 */
	public static final int THIRD_MAJOR = Semitone.FOUR;

	/**
	 * Five Semitones
	 */
	public static final int FOURTH_PERFECT = Semitone.FIVE;

	/**
	 * Negative Zero Semitones
	 */
	public static final int UNISON_DOWN = -Semitone.ZERO;
	public static final int SECOND_DIMINISHED_DOWN = -Semitone.ZERO;
}
